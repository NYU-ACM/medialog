<h2><%= MLOG_VOCAB["partner_codes"][@mlog_entries[0].partner_code] %></h2>
<h2><%= MLOG_VOCAB["collection_codes"][@mlog_entries[0].collection_code] %></h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Accession Num</th>
      <th>Media ID</th>
      <th>Media Type</th>
      <th>Imaging success</th>
      <th>Size (mb)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% paginate @mlog_entries %>
    <% @mlog_entries.each do |mlog_entry| %>
      <tr>
        <td><%= mlog_entry.accession_num %></td>
        <td><%= mlog_entry.media_id %></td>
        <td><%= MLOG_VOCAB["mediatypes"][mlog_entry.mediatype] %></td>
        <td><%= MLOG_VOCAB["image_success"][mlog_entry.imaging_success] %></td>
        <td><%= display_in_megabytes(mlog_entry.image_size_bytes).to_s %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
              Show
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'All', mlog_entry, class: "btn btn-info btn-xs" %></li>
              <li><a href="#">Object</a></li>
              <li><a href="#">Image Info</a></li>
              <li><a href="#">Workflow</a></li>
              <li><a href="#">Dublin Core</a></li>
            </ul>
          </div>
        </td>
       <!--  <td><%= link_to 'Show', mlog_entry, class: "btn btn-info btn-xs" %></td> -->
        <td><%= link_to 'Edit', edit_mlog_entry_path(mlog_entry), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Destroy', mlog_entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" \
%></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_mlog_entry_path, class: "btn btn-primary btn-sm" %>
