<br/>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Recent Medialog Entries</h3>
  </div>
  
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Mod. Date</th>
          <th>Repository</th>
          <th>ID</th>
          <th>Collection</th>
          <th>Accession</th>
          <th>ID</th>
          <th>Type</th>
          <th>Is Imaged</th>
        </tr>
      </thead>

      <tbody>
        <%= paginate @mlog_entries %>
        <% @mlog_entries.each do |mlog_entry| %>
          <tr>  
            <td> <%= mlog_entry.updated_at.to_datetime.to_date %></td>

            <td>
              <%=  link_to @collections[mlog_entry.collection_id].p_code,
              collection_path(mlog_entry.collection_id) %>
            </td>
            
            <td>
              <%=  link_to @collections[mlog_entry.collection_id].c_code,
              collection_path(mlog_entry.collection_id) %>
            </td>

            <td>
              <%=  link_to @collections[mlog_entry.collection_id].c_title,
                collection_path(mlog_entry.collection_id) %>
            </td>

            <td>
              <% if (mlog_entry.accession_id != nil) then %>
                <%= link_to @accessions[mlog_entry.accession_id], accession_path(mlog_entry.accession_id) %>
              <% end %>
            </td>

            <td><%= link_to mlog_entry.media_id, mlog_entry_path(mlog_entry) %></td>
            <td><%= MLOG_VOCAB["mediatypes"][mlog_entry.mediatype] %></td>
            <td><%= MLOG_VOCAB["image_success"][mlog_entry.imaging_success] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>