<h1>MediaLog Entries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Partner Code</th>
      <th>Collection Code</th>
      <th>Accession Num</th>
      <th>Media ID</th>
      <th>Media Type</th>
      <th>Imaged</th>
    </tr>
  </thead>

  <tbody>
    

    <%= paginate @mlog_entries %>
    <% @mlog_entries.each do |mlog_entry| %>

      <tr>  
        <td>
          <%=  link_to @collections[mlog_entry.collection_id].p_code, show_repository_path(@collections[mlog_entry.collection_id].p_code) %>
        </td>
        <td>
          <%=  link_to @collections[mlog_entry.collection_id].c_code, collection_path(mlog_entry.collection_id) %>
        </td>
        <td>
          <% if (mlog_entry.accession_id != nil) then %>
            <%= link_to @accessions[mlog_entry.accession_id], accession_path(mlog_entry.accession_id) %>
          <% end %>
        </td>
        <td><%= link_to mlog_entry.media_id, mlog_entry_path(mlog_entry) %></td>
        <td><%= MLOG_VOCAB["mediatypes"][mlog_entry.mediatype] %></td>
        <td><%= MLOG_VOCAB["image_success"][mlog_entry.imaging_success] %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
